<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp">

    <com.lingan.seeyou.ui.view.LoaderImageView
        android:id="@+id/ivAvatar"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/apk_mine_photo"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        />

    <ImageView
        android:id="@+id/ivItemMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/all_btn_more"/>


    <RelativeLayout
        android:id="@+id/nameLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="57dp"
        android:layout_toLeftOf="@+id/ivItemMore"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvNickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/space_xxs"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="小柚子"
            android:textColor="@color/black_a"
            android:textSize="14sp"
            />

        <!--android:background="@drawable/apk_all_white_selector"-->
        <TextView
            android:id="@+id/tvTypeFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tvNickname"
            android:singleLine="true"
            android:text="分享了话题"
            android:textColor="@color/black_b"
            android:textSize="12sp"/>


        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvNickname"
            android:singleLine="true"
            android:text="02:19 14-29"
            android:textColor="@color/black_b"
            android:textSize="12sp"/>
    </RelativeLayout>


</RelativeLayout>