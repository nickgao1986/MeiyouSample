<?xml version="1.0" encoding="utf-8"?>
<com.lingan.seeyou.ui.view.ResizeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/black_h"
        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <com.lingan.seeyou.ui.view.PullToRefreshListView
                android:id="@+id/listview"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:cacheColorHint="@color/trans_color"
                android:fadingEdge="none"
                android:listSelector="@color/trans_color"
                android:divider="@null"
                android:scrollingCache="true"
                android:scrollbars="none" />

            <include
                android:id="@+id/linearReply"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                layout="@layout/layout_dynamic_reply" />
        </LinearLayout>

        <com.lingan.seeyou.ui.view.LoadingView
            android:id="@+id/loadingview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />


    </RelativeLayout>

</com.lingan.seeyou.ui.view.ResizeLayout>