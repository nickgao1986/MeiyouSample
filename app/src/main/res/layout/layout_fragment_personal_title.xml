<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentTop="true"
                android:background="@color/personal_title_background"
                android:orientation="vertical">

<ImageView
    android:id="@+id/empty_view"
    android:layout_width="match_parent"
    android:layout_alignParentTop="true"
    android:layout_height="wrap_content" />

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_custom_title_bar"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/list_icon_height_50"
        android:background="@drawable/apk_default_titlebar_bg"
        android:visibility="visible">

        <TextView
            android:id="@+id/custom_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:maxWidth="240dip"
            android:singleLine="true"
            android:text="Title"
            android:textColor="@color/white_a"
            android:textSize="@dimen/text_size_l"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/baselayout_vg_general"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_height"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/custom_iv_left"
            android:layout_width="50dp"
            android:layout_height="@dimen/actionbar_item_hight"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:scaleType="center"
            android:src="@drawable/back_layout" />

        <Button
            android:id="@+id/btn_personal_head_attention"
            android:layout_width="48dp"
            android:layout_height="24dp"
            android:layout_toLeftOf="@id/custom_iv_right"
            android:gravity="center"
            android:layout_marginRight="15dp"
            android:textColor="@drawable/personal_attention_word_selector"
            android:textSize="@dimen/text_size_14"
            android:background="@drawable/personal_attention_btn_selector"
            android:text="关注"
            android:layout_centerVertical="true"
            android:visibility="visible"
            />


        <TextView
            android:id="@+id/tv_publish_dynamic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/custom_iv_right"
            android:layout_marginRight="15dp"
            android:textColor="@color/white_a"
            android:textSize="@dimen/dp_14"
            android:layout_centerVertical="true"
            android:text="发动态"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/custom_iv_right"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/actionbar_item_hight"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/space_s"
            android:gravity="center"
            android:src="@drawable/btn_more_selector"
            android:textColor="@color/white_a"
            android:textSize="@dimen/text_size_s" />


    </RelativeLayout>
</RelativeLayout>
</RelativeLayout>
