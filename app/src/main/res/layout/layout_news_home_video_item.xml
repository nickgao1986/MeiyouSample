<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_news_home_video"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/apk_all_white_selector"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:visibility="visible">

    <com.meetyou.crsdk.video.view.JCTopicVideoView
        android:id="@+id/jctVideoView"
        android:layout_width="match_parent"
        android:layout_height="200dip"
        android:background="@color/black_a">

    </com.meetyou.crsdk.video.view.JCTopicVideoView>

    <RelativeLayout
        android:id="@+id/rlBottomContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_xs"
        android:layout_marginLeft="@dimen/space_m"
        android:layout_marginTop="@dimen/space_xs">

        <TextView
            android:id="@+id/tv_video_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableRight="@drawable/feed_icon_meiyou"
            android:drawablePadding="3dip"
            android:gravity="center"
            android:maxLines="1"
            android:text="地域小风情"
            android:textColor="@color/black_c"
            android:textSize="@dimen/text_size_xxs_more" />

        <TextView
            android:id="@+id/tv_video_play_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/ic_video_comment"
            android:maxLines="1"
            android:text="395次播放"
            android:textColor="@color/black_c"
            android:textSize="@dimen/text_size_xxs_more" />

        <ImageView
            android:id="@+id/ic_video_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_value_15"
            android:layout_marginRight="4dp"
            android:layout_toLeftOf="@+id/tv_video_comment_count"
            android:src="@drawable/apk_tata_commentnu" />

        <TextView
            android:id="@+id/tv_video_comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/ivShare"
            android:maxLines="1"
            android:text="73"
            android:textColor="@color/black_c"
            android:textSize="@dimen/text_size_xxs_more" />

        <ImageView
            android:id="@+id/ivShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingBottom="@dimen/dp_3"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_20"
            android:paddingTop="@dimen/dp_3"
            android:src="@drawable/all_btn_more" />
    </RelativeLayout>

    <View
        android:id="@+id/view_video_space"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_xs"
        android:background="@drawable/bottom_bg" />
</LinearLayout>