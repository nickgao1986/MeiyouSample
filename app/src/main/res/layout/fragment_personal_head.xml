<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/personal_header_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/personal_header_with_one_line_personal_info_height"
                android:background="@drawable/personal_fragment_header_background"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.lingan.seeyou.ui.view.LoaderImageView
            android:id="@+id/ivPersonalBg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            />

        <ImageView
            android:id="@+id/mask"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/personal_fragment_header_pic_mask"
            android:scaleType="centerCrop"
            android:visibility="gone"
            />

    </FrameLayout>


    <RelativeLayout
        android:id="@+id/personal_header_without_info_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/personal_header_with_one_line_personal_info_height"
        >

        <LinearLayout
            android:id="@+id/ll_header_layout"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="22dp"
            android:orientation="horizontal"
            >

            <com.lingan.seeyou.ui.view.CircleShapeImageView
                android:id="@+id/ivPersonalHead"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:background="@drawable/personal_fragment_header_frame"
                android:layout_marginLeft="@dimen/dp_value_20"
                android:src="@drawable/apk_mine_photo"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_value_16"
                android:orientation="vertical"
                >

                <RelativeLayout
                    android:id="@+id/rlName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:id="@+id/tvPersonalName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:drawablePadding="5dp"
                        android:drawableRight="@drawable/apk_tag_pinpai"
                        android:ellipsize="end"
                        android:shadowRadius="7"
                        android:visibility="gone"
                        android:textStyle="bold"
                        android:singleLine="true"
                        android:text="你是最美的女孩子"
                        android:textColor="@color/white_a"
                        android:textSize="18sp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <include layout="@layout/layout_personal_other_info"></include>

                    <Button
                        android:id="@+id/btn_personal_head_attention"
                        android:layout_width="76dp"
                        android:layout_height="30dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_value_15"
                        android:background="@drawable/personal_attention_btn_selector"
                        android:gravity="center"
                        android:text="关注"
                        android:textColor="@drawable/personal_attention_word_selector"
                        android:textSize="@dimen/text_size_16"
                        android:visibility="gone"
                        tools:text="关注"
                        tools:visibility="visible"
                        />

                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

    <View
        android:background="@drawable/apk_all_lineone"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/header_divider"
        android:visibility="gone"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/personal_header_without_info_layout"
        android:id="@+id/personal_description"
        android:layout_above="@+id/header_divider"
        android:maxLines="2"
        android:paddingBottom="9.5dp"
        android:paddingLeft="@dimen/personal_header_info_margin_left_right"
        android:paddingRight="@dimen/personal_header_info_margin_left_right"
        android:paddingTop="9.5dp"
        android:text="即刻是一个服务云平台,无缝连接需求与服务,简单、快捷、可依赖。从现在开始使用即刻APP,百种服务一键对接,无需搜求、无需垂询、无需预约"
        android:textSize="12sp"
        android:textColor="@color/black_at"
        android:visibility="gone"
        tools:visibility="visible"
        >
    </TextView>

</RelativeLayout>