<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="bottom"
    android:orientation="horizontal" >


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_transparent"
        android:orientation="vertical"
        android:visibility="gone"
        android:padding="@dimen/space_xs" >

        <TextView
            android:id="@+id/dialog_upload_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/space_xxs"
            android:text=""
            android:textColor="@color/white_a"
            android:textSize="14sp" />

        <Button
            android:id="@+id/dialog_upload_sdcard"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/actionbar_item_hight"
            android:background="@drawable/btn_red_selector"
            android:padding="@dimen/space_s"
            android:text="相册"
            android:textColor="#fff"
            android:textSize="@dimen/text_size_s" />

        <Button
            android:id="@+id/dialog_upload_camera"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/actionbar_item_hight"
            android:layout_marginTop="@dimen/space_xs"
            android:background="@drawable/btn_red_selector"
            android:padding="@dimen/space_s"
            android:text="拍照"
            android:textColor="#fff"
            android:textSize="@dimen/text_size_s" />

        <Button
            android:id="@+id/dialog_upload_cancel"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/actionbar_item_hight"
            android:layout_marginTop="@dimen/space_xs"
            android:background="@drawable/btn_transparent_reb_selector"
            android:padding="@dimen/space_s"
            android:text="取消"
            android:textColor="@color/btn_red_to_white_color_selector"
            android:textSize="@dimen/text_size_s" />
    </LinearLayout>

</LinearLayout><!-- From: file:/E:/myproject/SeeyouClient4.3.4/res/layout/layout_photo_new.xml.xml -->