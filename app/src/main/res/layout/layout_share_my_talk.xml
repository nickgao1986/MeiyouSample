<?xml version="1.0" encoding="utf-8"?>
<com.lingan.seeyou.ui.view.ResizeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                            android:id="@+id/rootContainer"
                                            android:layout_width="fill_parent"
                                            android:layout_height="fill_parent"
                                            android:background="@drawable/bottom_bg"
                                            android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scrollview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_content"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_list_top_withoutwave"
                    android:background="@drawable/apk_all_spreadkuang"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="vertical"

                    >

                    <com.lingan.seeyou.ui.view.CustomEditText
                        android:id="@+id/publish_et_content"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_xs"
                        android:layout_marginRight="@dimen/space_xs"
                        android:layout_marginTop="@dimen/space_xxxs"
                        android:background="@drawable/apk_all_white"
                        android:gravity="left"
                        android:hint="说点分享心得吧~"
                        android:minHeight="150dip"
                        android:padding="@dimen/space_xxs"
                        android:textColor="@color/black_a"
                        android:textColorHint="@color/black_e"
                        android:textSize="18sp" />

                    <ImageView

                        android:id="@+id/ivEmoji"
                        android:layout_width="40dip"
                        android:layout_height="40dip"
                        android:layout_marginLeft="@dimen/space_xs"

                        android:scaleType="center"

                        android:src="@drawable/apk_sent_emotion_new"


                        />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/linearEmptyPhoto"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_xs"
                    android:background="@drawable/apk_all_spreadkuang"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/space_xs">

                    <RelativeLayout
                        android:id="@+id/rl_bottom"
                        android:layout_width="fill_parent"
                        android:layout_height="80dip"
                        android:layout_margin="@dimen/space_xxs"
                        android:background="@drawable/apk_all_yellowbg"
                        android:orientation="horizontal">

                        <nickgao.com.okhttpexample.view.LoaderImageView
                            android:id="@+id/ivSharePic"
                            android:layout_width="@dimen/list_icon_height_60"
                            android:layout_height="@dimen/list_icon_height_60"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/space_xs"
                            android:visibility="visible"

                            />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/space_xs"
                            android:layout_marginRight="@dimen/space_xs"
                            android:layout_toRightOf="@id/ivSharePic"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvShareContent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:text="最近在追关之美少女，觉得还可以赞的么？到客服较深的咖啡机SD卡飞机少打飞机阿斯顿飞机上打发斯蒂芬卡死地方卡斯加对咖啡机阿斯顿开飞机啊是都打飞机的身份和到健身房和电视剧和的到和倒计时撒旦法"
                                android:textColor="@color/black_a"
                                android:textSize="@dimen/text_size_m" />

                            <TextView
                                android:id="@+id/tvShareCategoryTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/space_xxxs"
                                android:text="瘦身美体"
                                android:textColor="@color/black_b"
                                android:textSize="@dimen/text_size_s" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>

                <View
                    android:id="@+id/viewBottom"
                    android:layout_width="fill_parent"
                    android:layout_height="600dip" />
            </LinearLayout>

        </ScrollView>

        <include
            android:id="@+id/emojiLayout"
            layout="@layout/custom_emoji_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>


</com.lingan.seeyou.ui.view.ResizeLayout>