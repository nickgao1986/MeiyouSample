<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_new_home_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.lingan.seeyou.ui.view.NewsHomeParallaxListview
        android:id="@+id/news_home_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:fadingEdge="none"
        android:footerDividersEnabled="true"
        android:listSelector="@color/trans_color"
        android:scrollbars="none"
        android:scrollingCache="false" />

    <com.lingan.seeyou.ui.view.LoadingView
        android:id="@+id/news_home_loadingView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dip"
        android:visibility="visible" />
</RelativeLayout>
