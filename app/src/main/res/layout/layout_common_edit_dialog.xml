<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/news_detail_input_bar_container_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/apk_all_white"
        android:orientation="vertical">

        <View style="@style/divider" />

        <EditText
            android:id="@+id/common_edit_dialog_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/shape_common_write_review_bg"
            android:gravity="left|top"
            android:maxLines="4"
            android:minHeight="32dp"
            android:paddingBottom="6dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="6dp"
            android:textColor="@color/black_a"
            android:textColorHint="@color/black_d"
            android:textSize="15sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:paddingBottom="8dp"
            android:paddingTop="8dp">

            <LinearLayout
                android:id="@+id/common_edit_dialog_panel_action_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/common_edit_dialog_emoji_toggle_imv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sel_common_emoji_btn" />
            </LinearLayout>

            <Button
                android:id="@+id/common_edit_dialog_submit_btn"
                android:layout_width="76dp"
                android:layout_height="30dp"
                android:layout_gravity="right|center_vertical"
                android:background="@drawable/btn_red_selector"
                android:enabled="false"
                android:gravity="center"
                android:text="@string/send"
                android:textColor="@color/white_a"
                android:textSize="16sp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/common_edit_dialog_panel_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/common_edit_dialog_emoji_layout"
                layout="@layout/custom_emoji_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </FrameLayout>
    </LinearLayout>

    <View
        android:id="@+id/common_edit_dialog_night_mask_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@id/news_detail_input_bar_container_layout"
        android:layout_alignLeft="@id/news_detail_input_bar_container_layout"
        android:layout_alignRight="@id/news_detail_input_bar_container_layout"
        android:layout_alignTop="@id/news_detail_input_bar_container_layout"
        android:background="@color/light_web_mengban"
        android:visibility="gone" />
</RelativeLayout>