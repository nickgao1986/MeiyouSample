<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_new_home_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.lingan.seeyou.ui.view.NewsHomeParallaxListview
        android:id="@+id/news_home_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:fadingEdge="none"
        android:footerDividersEnabled="true"
        android:listSelector="@color/trans_color"
        android:scrollbars="none"
        android:scrollingCache="false" />

    <RelativeLayout
        android:id="@+id/rlManSelectCity"
        android:layout_width="match_parent"
        android:layout_height="30dip"
        android:background="@drawable/apk_all_white_selector"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvManSelectCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableLeft="@drawable/news_icon_location"
            android:drawablePadding="5dip"
            android:gravity="center"
            android:text="点击选择城市"
            android:textColor="@color/black_at"
            android:textSize="@dimen/text_size_14" />

        <View
            style="@style/divider"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <com.lingan.seeyou.ui.view.LoadingView
        android:id="@+id/news_home_loadingView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rlManSelectCity"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dip"
        android:visibility="visible" />
</RelativeLayout>
