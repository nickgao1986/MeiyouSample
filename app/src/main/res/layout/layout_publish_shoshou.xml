<?xml version="1.0" encoding="utf-8"?>
<com.lingan.seeyou.ui.view.publish.PublishTopicWatchLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_keyboard_watch"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/apk_all_white"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fadingEdge="none"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.lingan.seeyou.ui.view.CustomEditText
                android:id="@+id/publish_et_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="top"
                android:hint="@string/publish_hint_content"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:textColor="@color/black_at"
                android:textColorHint="@color/black_d"
                android:textSize="17sp"/>


            <LinearLayout
                android:id="@+id/linearGridViewPhoto"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_xs"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical"
                android:paddingBottom="@dimen/space_xs"
                android:paddingLeft="@dimen/space_xxs"
                android:paddingRight="@dimen/space_xxs"
                android:paddingTop="@dimen/space_xs">

                <com.lingan.seeyou.ui.view.MeasureGridView
                    android:id="@+id/gridViewPhoto"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:fadingEdge="none"
                    android:listSelector="@color/bg_transparent"
                    android:numColumns="4"
                    android:scrollbars="none"

                    />
            </LinearLayout>
        </LinearLayout>


    </ScrollView>

    <View style="@style/divider"/>
    <!-- 底部操作栏 未显示键盘时 -->
    <com.lingan.seeyou.ui.view.publish.PublishThreeSwitchBar
        android:id="@+id/no_keyboard_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <LinearLayout
            android:id="@+id/ll_emoji_switch"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/selector_btn_emoji"/>

            <TextView
                android:id="@+id/tv_emoji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="表情"
                android:textColor="@color/selector_publish_topic_bottom_text"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_image_switch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingTop="10dp">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/selector_btn_photo"/>

            <TextView
                android:id="@+id/tv_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="图片"
                android:textColor="@color/selector_publish_topic_bottom_text"
                android:textSize="12sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_vote_switch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingTop="10dp">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/selector_btn_vote"/>

            <TextView
                android:id="@+id/tv_vote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="投票"
                android:textColor="@color/selector_publish_topic_bottom_text"
                android:textSize="12sp"/>

        </LinearLayout>

    </com.lingan.seeyou.ui.view.publish.PublishThreeSwitchBar>

    <!-- 底部操作栏 显示键盘时，为解决底部bar闪动的问题才做两个类似布局 -->
    <com.lingan.seeyou.ui.view.publish.PublishFourSwitchBar
        android:id="@+id/keyboard_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <LinearLayout
            android:id="@+id/ll_kb_emoji_switch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="12dp"
            android:paddingTop="12dp">

            <ImageView
                android:id="@+id/iv_kb_emoji"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/selector_btn_emoji"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_kb_image_switch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="12dp"
            android:paddingTop="12dp">

            <ImageView
                android:id="@+id/iv_kb_image"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/selector_btn_photo"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_hide_keyboard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:visibility="visible"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/iv_kb_hide_keyboard"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/selector_btn_hide_keyboard"/>
        </LinearLayout>


    </com.lingan.seeyou.ui.view.publish.PublishFourSwitchBar>

    <com.lingan.seeyou.ui.view.publish.PublishEmojiPanelLayout
        android:id="@+id/ll_emoji_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        tools:visibility="visible">

        <include
            android:id="@+id/emojiLayout"
            layout="@layout/custom_emoji_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.lingan.seeyou.ui.view.publish.PublishEmojiPanelLayout>
</com.lingan.seeyou.ui.view.publish.PublishTopicWatchLayout>