<?xml version="1.0" encoding="utf-8"?><!-- 底部编辑栏 评论收藏分享-->
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:orientation="vertical"
    tools:background="@drawable/apk_all_white"
    tools:parentTag="LinearLayout">

    <View
        android:id="@+id/common_input_bar_top_divider"
        style="@style/divider" />

    <LinearLayout
        android:id="@+id/common_input_bar_action_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/common_input_bar_write_comment_tv"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:background="@drawable/shape_common_write_review_bg"
            android:gravity="center_vertical"
            android:paddingBottom="6dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="6dp"
            android:textColor="@color/black_d"
            android:textSize="@dimen/text_size_15" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/common_input_bar_comment_imv"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:scaleType="centerInside"
                android:src="@drawable/sel_common_comment" />

            <TextView
                android:id="@+id/common_input_bar_review_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_alignLeft="@id/common_input_bar_comment_imv"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/shape_common_review_count_bg"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/white_a"
                android:textSize="10sp"
                tools:text="999+" />
        </RelativeLayout>

        <com.meiyou.app.common.inputbar.CollectButton
            android:id="@+id/common_input_bar_collect_btn"
            android:layout_width="48dp"
            android:layout_height="48dp" />

        <ImageView
            android:id="@+id/common_input_bar_share_imv"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="centerInside"
            android:src="@drawable/sel_common_share" />
    </LinearLayout>
</merge>