<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_value_10"
        android:background="@drawable/rectangle_all_corners"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/dialog_bottom"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dialog_top"
            android:layout_marginTop="-2dip"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_value_10"
                android:src="@drawable/refresh_icon_list_image"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="@dimen/dp_value_6"
                android:gravity="center_horizontal"
                android:maxLines="3"
                android:paddingBottom="@dimen/dp_value_5"
                android:paddingTop="@dimen/dp_value_10"
                android:text="contentcontentcontentcontentcontentcontent"
                android:textColor="@color/black_a"
                android:textSize="@dimen/text_size_16" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/dp_value_10"
                android:background="@color/black_e" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/dialog_top">

                <!--@drawable/btn_bg_selector-->
                <Button
                    android:id="@+id/btnCancle"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rectangle_bottom_left_corners_selector"
                    android:text="取消"
                    android:textColor="@color/black_b"
                    android:textSize="@dimen/text_size_20" />

                <View
                    android:id="@+id/center_line"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/black_e" />

                <Button
                    android:id="@+id/btnOK"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rectangle_bottom_right_corners_selector"
                    android:text="确定"
                    android:textColor="@color/red_b"
                    android:textSize="@dimen/text_size_20" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dialog_top"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_value_15"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:text="提示"
                android:textColor="@color/black_at"
                android:textSize="@dimen/text_size_20" />

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>