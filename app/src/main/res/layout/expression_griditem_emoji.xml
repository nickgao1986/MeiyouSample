<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/emoji_bg"
    android:gravity="center"
     >

    <nickgao.com.okhttpexample.view.LoaderImageView
        android:id="@+id/item_iv_emoji"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:padding="@dimen/space_xxs"
        android:layout_centerInParent="true"
        android:scaleType="centerInside" />
    <TextView
        android:id="@+id/tv_title"
        android:layout_below="@+id/item_iv_emoji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="快乐"
        android:textSize="@dimen/text_size_xxs"
        android:textColor="@color/black_a"

        />
</RelativeLayout>