<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/apk_all_white_selector"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ll_style_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="12dip"
        android:paddingTop="11dp"
        android:visibility="visible">

        <com.lingan.seeyou.ui.view.BageImageView
            android:id="@+id/iv_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="4dip"
            android:visibility="gone"
            tools:layout_height="70dp"
            tools:layout_width="70dp"
            tools:visibility="visible" />

        <LinearLayout
            android:id="@+id/ll_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/iv_image"
            android:gravity="left"
            android:orientation="vertical"
            android:paddingRight="12dip">

            <TextView
                android:id="@+id/tv_topic_title_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:lineSpacingExtra="6dip"
                android:maxLines="2"
                android:textColor="@color/black_at"
                android:textSize="18sp"
                tools:text="产后如何瘦身点击返回首都家里看" />

            <FrameLayout
                android:id="@+id/fl_multi_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_value_4"
                android:visibility="gone"
                tools:visibility="visible">

                <com.lingan.seeyou.ui.view.MultiImageView
                    android:id="@+id/iv_multi_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_multi_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:background="@drawable/btn_black_transparent_normal"
                    android:gravity="center"
                    android:paddingBottom="1dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/white_a"
                    android:textSize="10sp"
                    tools:text="9图" />
            </FrameLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rlBottomContent"
            android:layout_width="wrap_content"
            android:layout_height="28dip"
            android:layout_below="@+id/ll_content"
            android:layout_marginTop="6dip"
            android:layout_toLeftOf="@+id/iv_image"
            android:paddingRight="12dip">

            <com.lingan.seeyou.ui.view.LoaderImageView
                android:id="@+id/iv_block_two"
                android:layout_width="16dip"
                android:layout_height="16dip"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dip"
                android:scaleType="centerInside"
                android:src="@drawable/apk_tata_user"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_block_name_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_block_two"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/black_c"
                android:textSize="@dimen/text_size_xxs_more"
                tools:text="地域小风情" />

            <TextView
                android:id="@+id/tv_comment_count_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignBottom="@id/tv_block_name_two"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/tv_block_name_two"
                android:maxLines="1"
                android:textColor="@color/black_c"
                android:textSize="@dimen/text_size_xxs_more"
                tools:text="73回复" />

            <RelativeLayout
                android:id="@+id/rlTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_block_name_two"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_comment_count_two">

                <TextView
                    android:id="@+id/tv_time_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/space_s"
                    android:textColor="@color/black_c"
                    android:textSize="@dimen/text_size_12"
                    android:visibility="gone"
                    tools:text="10分钟前" />

                <!--

                <ImageView
                    android:id="@+id/ic_comment_count_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/dp_value_8"
                    android:layout_marginRight="4dp"
                    android:layout_toRightOf="@id/tv_time_two"
                    android:src="@drawable/apk_tata_commentnu" />

                <TextView
                    android:id="@+id/tv_comment_count_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@id/ic_comment_count_two"
                    android:maxLines="1"
                    android:textColor="@color/black_c"
                    android:textSize="@dimen/text_size_xxs_more"
                    tools:text="73" />
                -->
            </RelativeLayout>

            <ImageView
                android:id="@+id/ivClose"
                android:layout_width="wrap_content"
                android:layout_height="28dip"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:src="@drawable/all_btn_close" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:id="@+id/view_yunqi_feeds"
        android:background="@color/black_e"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="5dip" />
</LinearLayout>
