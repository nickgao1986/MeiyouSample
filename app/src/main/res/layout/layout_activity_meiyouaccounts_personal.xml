<?xml version="1.0" encoding="utf-8"?>
<com.lingan.seeyou.ui.view.ResizeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:orientation="vertical"
    >

    <com.lingan.seeyou.ui.view.ResizeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                android:id="@+id/rootContainer"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:orientation="vertical"
                                                android:visibility="visible"
        >

        <RelativeLayout
            android:id="@+id/rlPersonal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/llPersonalStatus">

            <RelativeLayout
                android:id="@+id/defaultBgRlayout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:visibility="gone"
                />

            <com.lingan.seeyou.ui.view.ParallaxScrollListView
                android:id="@+id/personal_list"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_above="@+id/llBottom"
                android:background="@null"
                android:cacheColorHint="#00000000"
                android:descendantFocusability="blocksDescendants"
                android:divider="@null"
                android:fadingEdge="none"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:footerDividersEnabled="true"
                android:listSelector="@color/trans_color"
                android:scrollbars="none"
                android:scrollingCache="false"
                />

            <TextView
                android:id="@+id/tvRelationHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/llBottom"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="5dip"
                android:layout_marginRight="@dimen/space_s"
                android:background="@drawable/apk_bg_homepage_dg"
                android:gravity="center"
                android:paddingLeft="@dimen/space_s_new"
                android:paddingRight="@dimen/space_s_new"
                android:text="互相关注后才可以开始聊天哦!"
                android:textColor="@color/white_a"
                android:textSize="@dimen/text_size_xs"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/llBottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">

                <include
                    android:id="@+id/linearReply"
                    layout="@layout/layout_dynamic_reply"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"/>

                <LinearLayout
                    android:id="@+id/llPersonalStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/apk_all_spread_kuang_selector"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:weightSum="2">

                    <LinearLayout
                        android:id="@+id/llPersonalBlack"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingBottom="12dp"
                        android:paddingTop="12dp">

                        <ImageView
                            android:id="@+id/imgPersonalBlack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/apk_tata_comment"/>

                        <TextView
                            android:id="@+id/tvPersonalBlack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingLeft="6dp"
                            android:text="@string/send_message"
                            android:textColor="@color/red_b"/>
                    </LinearLayout>


                    <ImageView
                        android:id="@+id/ivDivider"
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/apk_all_linetow"/>

                    <LinearLayout
                        android:id="@+id/llPersonalAttention"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingBottom="12dp"
                        android:paddingTop="12dp">

                        <ImageView
                            android:id="@+id/imgPersonalAttention"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/apk_toolbar_add"/>

                        <TextView
                            android:id="@+id/tvPersonalAttention"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingLeft="6dp"
                            android:text="@string/personal_attention"
                            android:textColor="@color/red_b"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_custom_title_bar"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/list_icon_height_50"
            android:background="@drawable/apk_default_titlebar_bg"
            android:visibility="visible">

            <TextView
                android:id="@+id/custom_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:maxWidth="240dip"
                android:singleLine="true"
                android:text="Title"
                android:textColor="@color/white_a"
                android:textSize="@dimen/text_size_l"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_custom_iv_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/space_s"
            android:layout_marginTop="@dimen/space_s"
            android:background="@drawable/apk_top_b2c_floatbg"
            android:visibility="visible"/>

        <ImageView
            android:id="@+id/custom_iv_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dip"
            android:layout_marginTop="17dip"
            android:scaleType="center"
            android:src="@drawable/back_layout"
            android:visibility="visible"/>

        <RelativeLayout
            android:id="@+id/rl_custom_iv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/space_s"
            android:layout_marginTop="@dimen/space_s"
            android:background="@drawable/apk_top_b2c_floatbg"
            android:visibility="visible"/>

        <ImageView
            android:id="@+id/custom_iv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="17dip"
            android:layout_marginTop="17dip"
            android:scaleType="center"
            android:src="@drawable/btn_more_selector"
            android:visibility="visible"/>

        <!-- 气泡提示-->
        <LinearLayout
            android:id="@+id/dialog_ucp_record_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="39dp"
            android:visibility="gone"
            >

            <TextView
                android:id="@+id/dialog_ucp_record_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:background="@drawable/apk_task_xiala_bg"
                android:gravity="center"
                android:paddingBottom="@dimen/space_xs"
                android:paddingLeft="@dimen/space_s"
                android:paddingRight="@dimen/space_s"
                android:paddingTop="@dimen/space_m"
                android:textColor="@color/white_a"/>
        </LinearLayout>

        <View
            android:id="@+id/view_transparent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            >
        </View>

    </com.lingan.seeyou.ui.view.ResizeLayout>

    <com.lingan.seeyou.ui.view.LoadingView
        android:id="@+id/globalloadingView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"/>


</com.lingan.seeyou.ui.view.ResizeLayout>