<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/top_space_view"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:visibility="gone"
        tools:visibility="visible" />

    <!-- 没有评论时的提示 -->
    <LinearLayout
        android:id="@+id/ll_empty_review_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/apk_all_white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_value_50"
        android:paddingTop="@dimen/dp_value_50"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/apk_comment_img_null" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:textColor="@color/black_b"
            android:textSize="14sp" />

    </LinearLayout>


    <!-- 评论内容 -->
    <RelativeLayout
        android:id="@+id/rl_review_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/apk_all_white_selector"
        android:paddingBottom="@dimen/dp_value_8"
        android:paddingLeft="@dimen/dp_value_12"
        android:paddingRight="@dimen/dp_value_12">

        <com.lingan.seeyou.ui.view.LoaderImageView
            android:id="@+id/iv_user_avatar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_user_avatar"
            android:layout_marginLeft="@dimen/dp_value_10"
            android:layout_marginTop="-2dp"
            android:layout_toRightOf="@id/iv_user_avatar"
            android:textColor="@color/colour_a"
            android:textSize="14sp"
            tools:text="兰卡一生推" />

        <TextView
            android:id="@+id/tv_publish_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_user_avatar"
            android:layout_below="@id/tv_user_name"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="@dimen/dp_value_10"
            android:layout_marginTop="-1dp"
            android:layout_toRightOf="@id/iv_user_avatar"
            android:textColor="@color/black_c"
            android:textSize="12sp"
            tools:text="7-21 10:05" />

        <com.lingan.seeyou.ui.view.PraiseButton
            android:id="@+id/btn_praise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="8.5dp" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_publish_time"
            android:layout_below="@id/tv_publish_time"
            android:layout_marginTop="12dp"
            android:ellipsize="end"
            android:lineSpacingExtra="3dp"
            android:maxLines="6"
            android:textColor="@color/black_at"
            android:textSize="16sp"
            tools:text="回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复" />

        <TextView
            android:id="@+id/tv_expand_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_content"
            android:layout_below="@id/tv_content"
            android:layout_marginRight="@dimen/dp_value_10"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:text="@string/news_review_expand_all"
            android:textColor="@color/colour_a"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/tv_content"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:text="回复"
            android:textColor="@color/black_c"
            android:textSize="14sp"
            android:layout_below="@+id/tv_content"/>

        <LinearLayout
            android:id="@+id/ll_sub_review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_content"
            android:layout_alignRight="@id/tv_content"
            android:layout_below="@id/tv_review"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="8dp"
                android:src="@drawable/all_bg_quote" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_sub_review_bg"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dp_value_12"
                android:paddingLeft="@dimen/dp_value_10"
                android:paddingRight="@dimen/dp_value_10"
                android:paddingTop="@dimen/dp_value_12">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_sub_review"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:id="@+id/ll_see_more_review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_more_review"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black_c"
                        android:textSize="@dimen/dp_value_14"
                        tools:text="查看更多1条回复" />

                    <ImageView
                        android:id="@+id/icon_more_n_reviews"
                        android:layout_width="11dp"
                        android:layout_height="11dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="0.5dp"
                        android:src="@drawable/all_icon_arrow" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/divider"
        style="@style/new_divider" />
</LinearLayout>