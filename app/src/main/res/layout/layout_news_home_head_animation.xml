<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_animation_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="visible">

    <RelativeLayout
        android:id="@+id/rl_animation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/rl_update"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:background="@drawable/bottom_bg"
            android:gravity="center">

            <com.lingan.seeyou.ui.view.TheBallLoaddingView
                android:id="@+id/ballLoaddingView"
                android:layout_width="24dip"
                android:layout_height="24dip"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dip"
                android:alpha="0" />

            <TextView
                android:id="@+id/tvLoadding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/ballLoaddingView"
                android:alpha="0"
                android:gravity="center"
                android:text="下拉即可刷新"
                android:textColor="@color/black_b"
                android:textSize="13sp"
                android:visibility="visible" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_loadding"
            android:layout_width="match_parent"
            android:layout_height="30dip"
            android:background="@drawable/bottom_bg"
            android:visibility="gone">

            <ImageView
                android:id="@+id/ivLoaddingBg"
                android:layout_width="20dip"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="@color/red_f"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tvLoaddingFinish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="为了推荐了10篇新话题"
                android:textColor="@color/red_b"
                android:textSize="13sp" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlSelectCity"
        android:layout_width="match_parent"
        android:layout_height="30dip"
        android:background="@drawable/apk_all_white_selector"
        android:layout_below="@+id/rl_animation"
        android:visibility="gone"
        >

        <TextView
            android:id="@+id/tvSelectCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableLeft="@drawable/apk_ic_feeds_sort_position"
            android:drawablePadding="5dip"
            android:gravity="center"
            android:textColor="@color/black_at"
            android:textSize="@dimen/text_size_14"
            android:text="点击选择城市" />
        <View
            android:id="@+id/view_select_city"
            style="@style/divider"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
</RelativeLayout>