<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true">
        <shape>

            <!-- 圆角 -->
            <corners android:bottomLeftRadius="2dp" android:bottomRightRadius="2dp" android:radius="5dp" android:topLeftRadius="2dp" android:topRightRadius="2dp" />
            <!-- 设置圆角半径 -->


            <!-- 间隔 -->
            <padding android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp" />
            <!-- 各方向的间隔 -->

            <!-- 大小 -->
            <size android:width="50dp" android:height="50dp" />
            <!-- 宽度和高度 -->

            <!-- 填充 -->
            <solid android:color="@color/green_bar_color" />
            <!-- 填充的颜色 -->

            <!-- 描边 -->
            <stroke android:width="1dp" android:color="@color/green_bar_color" />

        </shape>
    </item>
</selector>